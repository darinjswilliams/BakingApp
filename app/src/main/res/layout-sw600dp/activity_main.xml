<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/recipe_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <FrameLayout
            android:id="@+id/fragment_containier"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></FrameLayout>

        <View
            android:id="@+id/fragment_divider"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/eight_sp"
            android:layout_marginRight="@dimen/eight_sp"
            android:background="@android:color/darker_gray" />

        <FrameLayout
            android:id="@+id/fragment_details_containier"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>
</layout>