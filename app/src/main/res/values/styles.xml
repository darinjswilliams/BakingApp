<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="recipe">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_standard_size_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_standard_size_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_standard_size_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard_size_vertical</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/padding_standard_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/touch_select</item>
    </style>

    <style name="step" parent="recipe">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_standard_size</item>
    </style>

    <style name="format_of_steps" parent="recipe">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_standard_size</item>
        <item name="android:background">@drawable/card_gradient</item>
    </style>

    <style name="linear_layout_match">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="button" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/stand_padding</item>
        <item name="android:layout_marginRight">@dimen/stand_padding</item>
        <item name="android:layout_marginTop">@dimen/stand_padding</item>
        <item name="android:layout_marginBottom">@dimen/stand_padding</item>
        <item name="android:padding">@dimen/stand_padding</item>
        <item name="android:textSize">@dimen/text_standard_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/touch_select</item>
    </style>

</resources>
